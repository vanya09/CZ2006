<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <include
            android:id="@+id/toolbar2"
            layout="@layout/toolbar"/>
        </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:background="#ffffff">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/drawer_profile_picture"
        android:scaleType="fitXY"
        android:contentDescription="Main Image"
        android:padding="1dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name :"
        android:id="@+id/textView2"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name :"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name :"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth :"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NRIC :"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone NO. :"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country of residence :"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress :"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nationality :"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Edit Profile"
        android:id="@+id/profileButton"
        android:textColor="@android:color/white"
        android:elegantTextHeight="false"
        android:focusable="true"
        android:background="#FF329593"
        android:layout_gravity="center"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/usernameNull"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/firstnameNull"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/usernameNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/lastnameNull"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/usernameNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/dobNull"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/usernameNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/nricNull"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/firstnameNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/emailNull"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/lastnameNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/phoneNull"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/dobNull"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/residenceNull"
        android:layout_above="@+id/textView10"
        android:layout_alignStart="@+id/nricNull"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/addzNull"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/emailNull" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:id="@+id/nationalityNull"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/phoneNull" />
</RelativeLayout>

</RelativeLayout>
